<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile">

    <ImageView
        android:id="@+id/imageViewbannerprofile"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/banner_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewprofile"
        android:layout_width="142dp"
        android:layout_height="152dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/profile"
        app:layout_constraintEnd_toEndOf="@+id/imageViewbannerprofile"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewbannerprofile" />

    <TextView
        android:id="@+id/textViewname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/campana"
        android:hint="Name"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewprofile"
        app:layout_constraintStart_toStartOf="@+id/imageViewprofile"
        app:layout_constraintTop_toBottomOf="@+id/imageViewprofile" />


    <Button
        android:id="@+id/buttonfavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/smile"
        android:text="Favorite Recipes"
        android:textColor="@color/black"
        android:textColorHighlight="@color/black"
        android:textColorLink="@color/white"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewname" />

    <Button
        android:id="@+id/buttonactivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/smile"
        android:text="Activity"
        android:textColor="@color/black"
        android:textColorHighlight="@color/black"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.883"
        app:layout_constraintStart_toEndOf="@+id/buttonfavorite"
        app:layout_constraintTop_toBottomOf="@+id/textViewname" />

    <ImageButton
        android:id="@+id/imageButtonhome"
        android:layout_width="107dp"
        android:layout_height="80dp"
        android:background="@drawable/home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="DuplicateIds" />

    <ImageButton
        android:id="@+id/imageButtonnews"
        android:layout_width="107dp"
        android:layout_height="80dp"
        android:background="@drawable/news"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButtonhome"
        tools:ignore="DuplicateIds,SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/imageButtoncomunity"
        android:layout_width="107dp"
        android:layout_height="80dp"
        android:background="@drawable/comunity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButtonnews" />

    <ImageButton
        android:id="@+id/imageButtonprofile"
        android:layout_width="107dp"
        android:layout_height="80dp"
        android:background="@drawable/profile_dos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButtoncomunity" />


</androidx.constraintlayout.widget.ConstraintLayout>