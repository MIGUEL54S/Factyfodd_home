<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newrecipetres">

    <ImageView
        android:id="@+id/imageViewnewrecipetres"
        android:layout_width="371dp"
        android:layout_height="233dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/pastel_tasa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewnewrecipetres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Pastel de tasa"
        android:fontFamily="@font/campana"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewnewrecipetres"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageViewnewrecipetres"
        app:layout_constraintTop_toBottomOf="@+id/imageViewnewrecipetres" />

    <TextView
        android:id="@+id/textViewnewrecipedescripciontres"
        android:layout_width="368dp"
        android:layout_height="99dp"
        android:layout_marginTop="8dp"
        android:text="¡Prepara una delicia decadente en minutos con estos mugcakes de chocolate y avellanas! Perfectas para satisfacer tu gusto por lo dulce, estas delicias pegajosas están cargadas de bondad achocolatada y un toque de avellana."
        app:layout_constraintEnd_toEndOf="@+id/imageViewnewrecipetres"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewnewrecipetres"
        app:layout_constraintTop_toBottomOf="@+id/textViewnewrecipetres" />

    <TextView
        android:id="@+id/textViewpreparacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/campana"
        android:text="Preparacion"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="@+id/textViewnewrecipedescripciontres"
        app:layout_constraintTop_toBottomOf="@+id/textViewnewrecipedescripciontres" />

    <TextView
        android:id="@+id/textViewnewreciperecetatres"
        android:layout_width="369dp"
        android:layout_height="245dp"
        android:text="1.	En un tazón mediano, mezcle 3/4 taza (225 g) de crema de chocolate y avellanas y los huevos.
2.	Incorpora la harina.
3.	Distribuya uniformemente en dos tazas.
4.	Calienta cada taza en el microondas durante 2 minutos.
5.	Deje enfriar durante 5 minutos.
6.	Escarchar con la crema de chocolate y avellanas restante y servir caliente.
7.	¡Disfrutar!
"
        app:layout_constraintEnd_toEndOf="@+id/textViewnewrecipedescripciontres"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewpreparacion"
        app:layout_constraintTop_toBottomOf="@+id/textViewpreparacion" />

</androidx.constraintlayout.widget.ConstraintLayout>